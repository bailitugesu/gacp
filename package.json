{
  "name": "gacp",
  "version": "1.9.2",
  "description": "git add commit and push",
  "main": "index.js",
  "bin": {
    "gacp": "index.js"
  },
  "scripts": {
    "beta": "npm run test && npm run build && npm publish --tag beta",
    "release": "npm run test && npm run build && standard-version && git push --follow-tags && npm publish --registry=https://registry.npmjs.org/",
    "build": "node ./scripts/build.js",
    "test": "cross-env NODE_ENV=test nyc ava && nyc report --reporter=html && nyc report --reporter=lcov > coverage.lcov",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivaxy/gacp.git"
  },
  "keywords": [
    "git",
    "add",
    "commit",
    "push",
    "emoji",
    "gitmoji",
    "changelog",
    "conventional"
  ],
  "author": "vivaxy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vivaxy/gacp/issues"
  },
  "homepage": "https://github.com/vivaxy/gacp#readme",
  "dependencies": {
    "@vivaxy/execa-process-log": "^0.1.2",
    "babel-polyfill": "^6.16.0",
    "chalk": "^1.1.3",
    "conventional-commit-types": "^2.2.0",
    "execa": "^0.5.0",
    "fs-extra": "^3.0.1",
    "inquirer": "^1.2.3",
    "log-symbols": "^2.2.0",
    "right-pad": "^1.0.1",
    "standard-version": "^4.3.0",
    "update-notifier": "^2.1.0",
    "word-wrap": "^1.1.0",
    "yargs": "^6.4.0"
  },
  "devDependencies": {
    "@vivaxy/babel-folder": "^0.1.1",
    "ava": "^0.18.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "cross-env": "^3.2.4",
    "glob": "^7.1.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "nyc": "^10.1.2",
    "prettier": "^1.10.2"
  },
  "ava": {
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-polyfill",
      "babel-register"
    ],
    "babel": "inherit",
    "verbose": true
  },
  "lint-staged": {
    "**/**.{js,json,pcss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
